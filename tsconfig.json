    "sourceMap": true,
    "allowJs": true,
    "noEmitHelpers": true,
    "lib": [
      "es6",
      "dom"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
